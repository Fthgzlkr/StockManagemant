@model object
@{
    var warehouseId = ViewBag.WarehouseId;
}

<link rel="stylesheet" href="~/css/Site.css" asp-append-version="true" />

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Depo LokasyonlarÄ±</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />

    <style>
        .tree-wrapper {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .tree-card {
            width: 100%;
            max-width: 240px;
            flex: 0 0 auto;
            border: 1px solid #dee2e6;
            border-radius: 0.5rem;
            padding: 0.75rem;
            background-color: #f9f9f9;
        }

        .tree-card h6 {
            margin-bottom: 0.75rem;
            font-size: 16px;
            font-weight: 600;
            color: #0d6efd;
        }

        ul.tree {
            list-style-type: none;
            padding-left: 1.2rem;
        }

        ul.tree li {
            position: relative;
            padding-left: 1.2rem;
            margin-bottom: 6px;
        }

        ul.tree li::before {
            content: "\2022";
            position: absolute;
            left: 0;
            top: 0;
            color: #aaa;
        }

        .level-shelf {
            font-weight: 600;
            color: #333;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .level-bin {
            font-size: 14px;
            color: #555;
        }

        .add-corridor-icon {
            cursor: pointer;
            font-size: 20px;
            color: green;
        }

        .add-input {
            margin-top: 4px;
        }

        .action-icons {
            float: right;
            font-size: 14px;
            color: #6c757d;
        }
        .action-icons i {
            margin-left: 6px;
            cursor: pointer;
        }
        .action-icons i:hover {
            color: #000;
        }
        .editable {
            cursor: pointer;
            border-bottom: 1px dashed #ccc;
        }
    </style>
</head>
<body>
<div class="container-fluid p-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="text-primary">ðŸ“¦ Lokasyonlar - Depo ID: @warehouseId</h5>
        <span class="add-corridor-icon" onclick="toggleCorridorInput()" title="Yeni Koridor Ekle">âž•</span>
    </div>

    <!-- Koridor ekleme inputu gizli olarak baÅŸlar -->
    <div id="corridorInputArea" class="mb-3" style="display: none;">
        <div class="input-group w-50">
            <input type="text" id="newCorridorInput" class="form-control" placeholder="Koridor adÄ±" oninput="this.value = this.value.toUpperCase().slice(0, 2);" />
            <button class="btn btn-success" onclick="addCorridor()">Ekle</button>
        </div>
    </div>

    <div id="locationTreeContainer" class="tree-wrapper">YÃ¼kleniyor...</div>
    <input type="hidden" id="warehouseIdHidden" value="@warehouseId" />
</div>
<script src="/js/warehouse-location.js"></script>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
