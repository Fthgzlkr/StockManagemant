@model StockManagemant.Entities.DTO.ProductDto

@{
    ViewData["Title"] = "Ürün Düzenleme";
    Layout = null;
}
<link rel="stylesheet" href="~/css/Site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/product-form.css" asp-append-version="true" />
<div class="container mt-4">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <form id="editProductForm" class="card p-4 shadow-sm">

        <input type="hidden" id="productId" name="Id" value="@Model.Id">

        <div class="row g-3">
            <!-- Ürün Adı -->
            <div class="col-md-6">
                <label for="productName" class="form-label">Ürün Adı:</label>
                <input type="text" id="productName" name="Name" class="form-control" value="@Model.Name"
                       placeholder="Ürün adını girin" required minlength="2" maxlength="100">
                <div class="invalid-feedback">Ürün adı en az 2, en fazla 100 karakter olmalıdır.</div>
            </div>

            <!-- Fiyat -->
            <div class="col-md-6">
                <label for="productPrice" class="form-label">Fiyat:</label>
                <input type="number" id="productPrice" name="Price" class="form-control" step="0.01"
                       value="@(Model.Price.HasValue ? Model.Price.Value.ToString("0.00", System.Globalization.CultureInfo.InvariantCulture) : "")"
                       placeholder="Ürün fiyatını girin">
                <div class="invalid-feedback">Geçerli bir fiyat giriniz.</div>
            </div>

            <!-- Kategori -->
            <div class="col-md-6">
                <label for="productCategory" class="form-label">Kategori:</label>
                <select id="productCategory" name="CategoryId" class="form-select" data-selected="@Model.CategoryId" required>
                    <option value="">Kategoriler yükleniyor...</option>
                </select>
                <div class="invalid-feedback">Lütfen bir kategori seçiniz.</div>
            </div>

            <!-- Para Birimi -->
            <div class="col-md-6">
                <label for="productCurrency" class="form-label">Para Birimi:</label>
                <select id="productCurrency" name="Currency" class="form-select" required>
                    <option value="@((int)CurrencyType.TL)" selected="@(Model.Currency == CurrencyType.TL ? "selected" : null)">TL</option>
                    <option value="1" selected="@(Model.Currency == CurrencyType.USD ? "selected" : null)">USD</option>
                </select>
                <div class="invalid-feedback">Lütfen bir para birimi seçiniz.</div>
            </div>

            <!-- Barkod -->
            <div class="col-md-6">
                <label for="productBarcode" class="form-label">Barkod:</label>
                <input type="text" id="productBarcode" name="Barcode" class="form-control" value="@Model.Barcode" placeholder="Ürün barkodunu girin">
            </div>

            <!-- Görsel URL -->
            <div class="col-md-6">
                <label for="productImageUrl" class="form-label">Ürün Görsel URL:</label>
                <input type="url" id="productImageUrl" name="ImageUrl" class="form-control" value="@Model.ImageUrl" placeholder="Görsel URL'sini girin">
            </div>

            <!-- Açıklama (tam genişlik) -->
            <div class="col-12">
                <label for="productDescription" class="form-label">Açıklama:</label>
                <textarea id="productDescription" name="Description" class="form-control" rows="3"
                          placeholder="Ürün açıklaması girin">@Model.Description</textarea>
            </div>

            <!-- Buton -->
            <div class="col-12 text-center mt-2">
                <button type="button" class="btn btn-primary px-4" id="updateProductBtn">Güncelle</button>
            </div>
        </div>
    </form>
</div>
