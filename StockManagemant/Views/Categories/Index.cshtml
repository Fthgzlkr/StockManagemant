@{
    ViewData["Title"] = "Kategori Yönetimi";
}
<link rel="stylesheet" href="~/css/GlobalStyles.css" asp-append-version="true" />

<h2 class="text-center mt-3">Kategori Yönetimi</h2>

<!-- Grid ve Sayfalama Alanı -->
<table id="categoryGrid"></table>
<div id="pager"></div>

    <script>
     $(document).ready(function () {
        $("#categoryGrid").jqGrid({
            url: '/Categories/GetAllCategories',
            datatype: "json",
            mtype: "GET",
            colNames: ['ID', 'Kategori Adı','Actions'],
            colModel: [
                { name: 'id', index: 'id', width: 50, align: "center", sortable: true, key: true },
                { name: 'name', index: 'name', width: 200, sortable: true, editable: true },
                {
                    name: "actions",
                    label: "Actions",
                    align: "center",
                    formatter: function (cellvalue, options, rowObject) {
                        return `
                        <div class="action-icons">
                            <i class="fa-solid fa-pen text-primary fa-xl open-category-edit"
                                data-id="${rowObject.id}" data-name="${rowObject.name}" title="Düzenle"></i>
                            <i class="fa-solid fa-trash text-danger fa-xl delete-btn"
                                data-id="${rowObject.id}" title="Sil"></i>
                        </div>
                        `;
                    }
                }
            ],
            pager: '#pager',
            rowNum: 10,
            rowList: [10, 20, 30, 50],
            sortname: 'id',
            sortorder: 'asc',
            viewrecords: true,
            height: 'auto',
            autowidth: true,
            shrinkToFit: true,
            caption: "Kategori Listesi",
            loadonce: false,
            guiStyle: "bootstrap4",
            jsonReader: {
                root: "rows",
                page: "page",
                total: "total",
                records: "records",
                repeatitems: false,
                id: "id"
            }
        });

        $("#categoryGrid").jqGrid('navGrid', '#pager',
            { edit: false, add: true, del: false, search: false, refresh: true },
            {}, {}, {}, {}
        );

        // ❌ Kategori Silme (Swal2 ile)
        $(document).on("click", ".delete-btn", function () {
            let id = $(this).data("id");

            Swal.fire({
                title: "Silme İşlemi",
                text: "Bu kategoriyi silmek istediğinize emin misiniz?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Evet, Sil!",
                cancelButtonText: "Hayır, İptal"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/Categories/Delete/' + id,
                        type: 'POST',
                        success: function (response) {
                            Swal.fire({
                                title: "Başarılı!",
                                text: "Kategori başarıyla silindi.",
                                icon: "success",
                                confirmButtonColor: "#3085d6"
                            });
                            $("#categoryGrid").trigger("reloadGrid"); // ✅ Grid Güncelle
                        },
                        error: function () {
                            Swal.fire({
                                title: "Hata!",
                                text: "Silme işlemi başarısız oldu!",
                                icon: "error",
                                confirmButtonColor: "#d33"
                            });
                        }
                    });
                }
            });
        });

        // 🖊 Kategori Düzenleme (Swal2 ile)
        $(document).on("click", ".open-category-edit", function () {
            let categoryId = $(this).data("id");
            let categoryName = $(this).data("name");

            Swal.fire({
                title: "Kategori Düzenle",
                input: "text",
                inputLabel: "Kategori Adı",
                inputValue: categoryName,
                showCancelButton: true,
                confirmButtonText: "Kaydet",
                cancelButtonText: "İptal",
                inputValidator: (value) => {
                    if (!value) {
                        return "Kategori adı boş olamaz!";
                    }
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    let newCategoryName = result.value;

                    $.ajax({
                        url: "/Categories/EditCategory",
                        type: "POST",
                        contentType: "application/json",
                        data: JSON.stringify({ Id: categoryId, Name: newCategoryName }),
                        success: function (response) {
                            if (response.success) {
                                Swal.fire({
                                    title: "Güncellendi!",
                                    text: "Kategori başarıyla güncellendi.",
                                    icon: "success",
                                    timer: 1500,
                                    showConfirmButton: false
                                });
                                $("#categoryGrid").trigger("reloadGrid"); // ✅ Grid Güncelle
                            } else {
                                Swal.fire("Hata!", response.message, "error");
                            }
                        },
                        error: function () {
                            Swal.fire("Hata!", "Kategori güncellenemedi.", "error");
                        }
                    });
                }
            });
        });

    });


    </script>

