<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"] - Stok Takip</title>
    
    <!-- PWA Meta Tags -->
    <meta name="theme-color" content="#2196F3">
    <meta name="description" content="Mobil Stok Takip Uygulaması">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    
    <!-- PWA Manifest -->
    <link rel="manifest" href="~/mobile/manifest.json">
    <link rel="apple-touch-icon" href="~/mobile/icons/icon-192x192.png">
    
    <!-- CSS -->
    <link rel="stylesheet" href="~/css/mobile.css" asp-append-version="true" />
</head>
<body>
    <!-- Ana İçerik -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- JavaScript -->
    <script src="~/js/mobile.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>